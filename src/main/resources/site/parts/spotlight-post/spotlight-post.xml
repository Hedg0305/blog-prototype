<part xmlns="urn:enonic:xp:model:1.0">
  <display-name>Spotlight Post</display-name>
  <description>Drag'n drop enabled</description>

  <form>
    <input name="spotlightPost" type="ContentSelector">
      <label>Select a post to put in the spotlight:</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowContentType>blog</allowContentType>
        <treeMode>true</treeMode>  
        <hideToggleIcon>true</hideToggleIcon> 
      </config>
    </input>
  </form>
</part>


